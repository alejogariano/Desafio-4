<div class="container mt-5">
    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <h1>Lista de productos</h1>
            </div>
            <div class="col">
                <a href="/realTimeProducts" target="_blank" class="btn btn-info">
                    Agregar un producto...
                </a>
            </div>
        </div>
    </div>
    {{#if products}}
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Thumbnail</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>${{price}}</td>
                        <td><img src="{{thumbnail}}" alt="{{title}} thumbnail" class="img-fluid" style="width: 50px;"></td>
                        <td>
                            <a href="/product/{{id}}" class="btn btn-info">View Details</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>Productos no disponibles</p>
    {{/if}}
</div>